---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface Props {
    title: string;
    paragraphs: string[];
    image: ImageMetadata;
}

const { title, paragraphs, image } = Astro.props;
---

<section class="w-full py-16 px-6 max-w-6xl mx-auto flex flex-col md:flex-row items-center gap-12">
    <div class="w-full md:w-1/2 h-80 rounded-lg shadow-lg overflow-hidden">

        <Image
                src={image}
                alt="Nuestra historia"
                class="w-full h-full object-cover"
        />

    </div>

    <div class="w-full md:w-1/2 flex flex-col gap-4">
        <h2 class="font-title text-4xl text-primary font-bold">{title}</h2>
        <div class="h-1 w-20 bg-secondary"></div>
        {paragraphs.map((text) => (
                <p class="font-text text-gray-700 leading-relaxed">
                    {text}
                </p>
        ))}
    </div>
</section>