---
import LinkIconComponent from "../../shared/LinkIconComponent.astro";

interface ValueItem {
    icon: string;
    title: string;
    description: string;
}

interface Props {
    values: ValueItem[];
}

const { values } = Astro.props;
---

<section class="w-full py-16 px-6 bg-tertiary text-primary">

    <div class="max-w-6xl mx-auto text-center mb-12">
        <h2 class="font-title text-3xl md:text-4xl font-bold">Lo que nos define</h2>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
        {values.map((item) => (
                <div class="flex flex-col items-center gap-4 p-8 bg-white rounded-xl shadow-md hover:shadow-xl hover:-translate-y-1 transition-all duration-300 border border-secondary/20 group">

                    <LinkIconComponent
                            name={item.icon}
                            color="#37261f"
                            size="lg"
                            type="solid"
                    />

                    <h3 class="font-title text-2xl font-bold">{item.title}</h3>

                    <p class="font-text text-sm text-center text-primary/80 leading-relaxed">
                        {item.description}
                    </p>
                </div>
        ))}
    </div>
</section>