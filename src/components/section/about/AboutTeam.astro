---
import { Image } from 'astro:assets';
import type { ImageMetadata } from 'astro';

interface TeamMember {
    name: string;
    role: string;
    image: ImageMetadata;
}

interface Props {
    team: TeamMember[];
}

const { team } = Astro.props;
---

<section class="w-full py-20 px-6 bg-tertiary text-primary">
    <div class="max-w-7xl mx-auto text-center mb-12">
        <h2 class="font-title text-4xl md:text-5xl font-bold mb-4">Conoce al Equipo</h2>
        <p class="font-text text-xl">Los rostros detrás de tu café favorito.</p>
    </div>

    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-4 gap-8 max-w-7xl mx-auto">
        {team.map((member) => (
                <div class="flex flex-col items-center text-center p-4 bg-white rounded-xl shadow-lg transition-transform hover:scale-[1.03] duration-300">

                    <div class="w-32 h-32 rounded-full overflow-hidden mb-4 border-4 border-secondary/50">
                        <Image
                                src={member.image}
                                alt={`Foto de ${member.name}`}
                                class="w-full h-full object-cover object-center"
                        />
                    </div>

                    <h3 class="font-title text-xl font-bold text-primary">{member.name}</h3>
                    <p class="font-text text-sm text-secondary font-semibold">{member.role}</p>
                </div>
        ))}
    </div>
</section>