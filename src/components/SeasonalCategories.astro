---
interface Category {
  id: number;
  name: string;
  image: string;
  productCount: number;
}

const { categories } = Astro.props;
---

<section class="py-12 bg-gray-50">
  <div class="container mx-auto px-4">
    <h2 class="text-3xl font-bold text-center mb-12 text-gray-800 font-title">Categor√≠as de Temporada</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
      {categories.map((category) => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300 group cursor-pointer">
          <div class="relative">
            <img
              src={category.image}
              alt={category.name}
              class="w-full h-40 object-cover group-hover:scale-105 transition-transform duration-300"
            />
            <div class="absolute inset-0 bg-black/20 group-hover:bg-black/10 transition-colors duration-300"></div>
          </div>
          <div class="p-4 text-center">
            <h3 class="text-xl font-semibold text-gray-800 mb-2">{category.name}</h3>
            <p class="text-gray-600 text-sm">{category.productCount} productos</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>