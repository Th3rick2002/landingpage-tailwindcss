---
import Layout from '../layouts/Layout.astro';
import SeasonalHero from '../components/SeasonalHero.astro';
import SeasonalCategories from '../components/SeasonalCategories.astro';
import PromotionalBanners from '../components/PromotionalBanners.astro';
import SeasonalProductCard from '../components/SeasonalProductCard.astro';
import '../styles/global.css';

const seasonalProducts = [
  {
    id: 1,
    name: "Café de Temporada Navideño",
    price: 12.99,
    originalPrice: 15.99,
    image: "/src/assets/seasonal/cafe_navidad.jpg",
    category: "Café Especial",
    isNew: true,
    discount: 20
  },
  {
    id: 2,
    name: "Té Chai Especiado",
    price: 8.99,
    image: "/src/assets/seasonal/te_chai.jpg",
    category: "Tés",
    isNew: true
  },
  {
    id: 3,
    name: "Chocolate Caliente Premium",
    price: 6.99,
    originalPrice: 8.99,
    image: "/src/assets/seasonal/chocolate.jpg",
    category: "Bebidas Calientes",
    discount: 15
  },
  {
    id: 4,
    name: "Galletas de Jengibre",
    price: 4.99,
    image: "/src/assets/seasonal/galletas.jpg",
    category: "Repostería",
    isNew: true
  },
  {
    id: 5,
    name: "Panettone Artesanal",
    price: 18.99,
    originalPrice: 22.99,
    image: "/src/assets/seasonal/panettone.jpg",
    category: "Panadería",
    discount: 18
  },
  {
    id: 6,
    name: "Cappuccino Especial",
    price: 5.99,
    image: "/src/assets/seasonal/cappuccino.jpg",
    category: "Café Especial",
    isNew: true
  }
];

const seasonalCategories = [
  {
    id: 1,
    name: "Cafés de Temporada",
    image: "/src/assets/seasonal/cafes.jpg",
    productCount: 12
  },
  {
    id: 2,
    name: "Tés Especiales",
    image: "/src/assets/seasonal/tes.jpg",
    productCount: 8
  },
  {
    id: 3,
    name: "Postres Navideños",
    image: "/src/assets/seasonal/postres.jpg",
    productCount: 15
  },
  {
    id: 4,
    name: "Bebidas Calientes",
    image: "/src/assets/seasonal/bebidas.jpg",
    productCount: 10
  }
];

const promotionalBanners = [
  {
    id: 1,
    title: "Oferta Especial de Navidad",
    description: "Hasta 40% de descuento en productos seleccionados. Tiempo limitado.",
    image: "/src/assets/seasonal/banner_navidad.jpg",
    ctaText: "Ver Ofertas",
    ctaLink: "#productos"
  },
  {
    id: 2,
    title: "Nuevas Bebidas de Invierno",
    description: "Descubre nuestra nueva colección de bebidas calientes para esta temporada.",
    image: "/src/assets/seasonal/bebidas_invierno.jpg",
    ctaText: "Explorar",
    ctaLink: "#productos"
  },
  {
    id: 3,
    title: "Paquetes de Regalo Perfectos",
    description: "Sets especiales para regalar a tus seres queridos esta Navidad.",
    image: "/src/assets/seasonal/paquetes.jpg",
    ctaText: "Ver Paquetes",
    ctaLink: "#productos"
  }
];
---

<Layout title="Productos de Temporada - Coffee Shop">

  <SeasonalHero
    title="Productos de Temporada"
    subtitle="Descubre nuestras especialidades navideñas y bebidas calientes para disfrutar del invierno"
    backgroundImage="/src/assets/seasonal/hero.jpg"
  />

  <SeasonalCategories categories={seasonalCategories} />

  <section class="py-16 bg-white" id="productos">
    <div class="container mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-4xl font-bold text-gray-800 mb-4 font-title">
          Productos Destacados
        </h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Nuestra selección especial para esta temporada festiva
        </p>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {seasonalProducts.map((product) => (
          <SeasonalProductCard {...product} />
        ))}
      </div>

      <div class="text-center mt-12">
        <button class="bg-primary text-white px-8 py-3 rounded-lg hover:bg-primary/90 transition-colors duration-200 font-semibold text-lg">
          Ver Todos los Productos
        </button>
      </div>
    </div>
  </section>

  <PromotionalBanners banners={promotionalBanners} />

  <section class="py-16 bg-primary text-white">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-4 font-title">
        No Te Pierdas Nuestras Ofertas
      </h2>
      <p class="text-xl mb-8 max-w-2xl mx-auto">
        Suscríbete y recibe las últimas novedades y promociones exclusivas
      </p>
      <div class="flex justify-center">
        <button class="bg-secondary text-white px-8 py-3 rounded-lg hover:bg-secondary/90 transition-colors duration-200 font-semibold">
          Suscribirse
        </button>
      </div>
    </div>
  </section>

</Layout>
